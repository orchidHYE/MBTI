	  ]]>
	</select>
	<!-- 목록 조회 -->
	<select id="selectINFPBoardList" parameterType="int" resultType="com.pro.mbti.domain.INFPBoardDTO" >
	  <![CDATA[
		select INFPBoardNo, memberNick, INFPBoardTitle, INFPBoardDate, INFPBoardHit, INFPBoardLike
		from INFPBoard
		order by INFPBoardNo desc limit ?,?
	  ]]>
	</select>
