<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
          "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="INTJBoard">
	<!--INTJ게시판목록 전체조회 -->
	<select id="selectINTJBoardList"
		resultType="com.pro.mbti.intj.domain.board.INTJBoardDTO">
			<![CDATA[
				select INTJBoardNo,memberNick,INTJBoardTitle,INTJBoardDate,INTJBoardLike,INTJBoardHit
				from INTJBoard
				order by INTJBoardNo desc
	 		]]>
	</select>
	<!--INTJ게시판 게시글 작성 -->
	<insert id="insertINTJBoardList" parameterType="com.pro.mbti.intj.domain.board.INTJBoardDTO">
			<![CDATA[
				insert into INTJBoard(memberNick,INTJBoardTitle,INTJBoardDetail)
				values(#{memberNick},#{INTJBoardTitle},#{INTJBoardDetail})
			]]>
	</insert>
	
	<!--INTJ게시판 게시글 상세보기-->
	<select id="readINTJList"
		resultType="com.pro.mbti.intj.domain.board.INTJBoardDTO">
			<![CDATA[
				select INTJBoardNo,memberNick,INTJBoardTitle,INTJBoardDate,INTJBoardLike,INTJBoardHit
				from INTJBoard
				where INTJBoardNo = #{INTJBoardNo}
	 		]]>
	</select>
</mapper>